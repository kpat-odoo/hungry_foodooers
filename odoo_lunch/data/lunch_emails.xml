<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rsvp_reminder" model="mail.template">
            <field name="name">RSVP for lunch</field>
            <field name="model_id" ref="odoo_lunch.model_lunch_week"/>
            <field name="email_from">noreply@example.com</field>
            <field name="subject">RSVP for your lunch please</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>
                        <br/>
                        Please RSVP for the lunch for this week!
                        <br/>
                        <ul>
                            <t t-foreach="object.menu_ids.sorted('date')" t-as="menu">
                                <li>
                                    <t t-if="menu.is_all_week"> 
                                        <t t-esc="menu.name"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="menu.date.strftime('%A')"/> : <t t-esc="menu.name"/>
                                    </t>
                                </li>
                            </t>
                        </ul>
                        <t t-set="base_url" t-value="object.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                        <a t-att-href="base_url + '/odoo/calendar'">Go to Calendar</a>
                        <br/>
                        Best Regards,
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>

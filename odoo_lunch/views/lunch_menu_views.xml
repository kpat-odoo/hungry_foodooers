<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lunch_menu_form_view" model="ir.ui.view">
        <field name="name">lunch.menu.form.view</field>
        <field name="model">lunch.menu</field>
        <field name="arch" type="xml">
            <form string="Lunch Menu">
                <header>
                    <field name="stage" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" placeholder="Menu Name"/>
                        <field name="date" placeholder="Menu Date"/>
                        <field name="ingredients"/>
                        <field name="allergy_info"/>
                        <field name="category"/>
                        <field name="event" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lunch_menu_list_view" model="ir.ui.view">
        <field name="name">lunch.menu.list.view</field>
        <field name="model">lunch.menu</field>
        <field name="arch" type="xml">
            <list string="Lunch Menu">
                <field name="name"/>
                <field name="date"/>
                <field name="ingredients"/>
                <field name="allergy_info"/>
                <field name="category"/>
                <field name="stage" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>
            </list>
        </field>
    </record>
</odoo>

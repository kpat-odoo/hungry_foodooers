<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lunch_week_form_view" model="ir.ui.view">
        <field name="name">lunch.week.form.view</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <form string="Weekly Lunch Menu">
                <header>
                    <button name="action_send_rsvp_email" type="object"
                            string="Send Reminder"
                            class="btn-primary"
                            confirm="Are you sure you want to send reminders?" />

                    <field name="stage" widget="statusbar" statusbar_visible="draft,confirmed,posted,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" placeholder="Week Name"/>
                        <!-- <span class="fa fa-clock-o me-2" title="Dates"/> -->
                        <div>
                            <strong>Dates </strong>
                            <div style="display:inline-block; vertical-align: middle;">
                                <field name="date_start"/>
                            </div>
                            <div style="display:inline-block; vertical-align: middle; padding: 0 8px;">
                                <i class="fa fa-long-arrow-right" aria-label="Arrow icon" title="Arrow"/>
                            </div>
                            <div style="display:inline-block; vertical-align: middle;">
                                <field name="date_end"/>
                            </div>
                        </div>
                    </group>
                    <notebook>
                        <page string="Menu Items" name="menu_items">
                            <field name="menu_ids" widget="sol_o2m" mode="list" readonly="stage == 'cancel' or stage == 'posted'">
                                <list string="Menu Items" editable="bottom" limit="200" decoration-warning="stage in ['draft', 'confirmed']">
                                    <field name="name" placeholder="Menu Name"/>
                                    <field name="date" placeholder="Menu Date"/>
                                    <field name="stage"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="lunch_week_tree_view" model="ir.ui.view">
        <field name="name">lunch.week.tree.view</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <list string="Weekly Lunch Menu">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </list>
        </field>
    </record>
    <record id="lunch_week_view_calendar" model="ir.ui.view">
        <field name="name">lunch.week.view.calendar</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <calendar string="Lunch" date_start="date_start" date_stop="date_end">
                <field name="name"/>
            </calendar>
        </field>
    </record>
</odoo>

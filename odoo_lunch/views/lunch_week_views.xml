<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lunch_week_form_view" model="ir.ui.view">
        <field name="name">lunch.week.form.view</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <form string="Weekly Lunch Menu">
                <header>
                    <button name="action_send_rsvp_email" type="object"
                            string="Send Reminder"
                            class="btn-primary"
                            confirm="Are you sure you want to send reminders?" />
                </header>
                <sheet>
                    <group>
                        <field name="name" placeholder="Week Name"/>
                        <!-- <span class="fa fa-clock-o me-2" title="Dates"/> -->
                        <div class="oe_inline">
                            <div class="oe_form_field">
                                <field name="date_start"/>
                            </div>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <div class="oe_form_field">
                                <field name="date_end"/>
                            </div>
                        </div>

                    </group>
                    <field name="menu_ids" widget="many2many_tags"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="lunch_week_tree_view" model="ir.ui.view">
        <field name="name">lunch.week.tree.view</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <list string="Weekly Lunch Menu">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </list>
        </field>
    </record>
    <!-- <record id="lunch_week_view_calendar" model="ir.ui.view">
        <field name="name">lunch.week.view.calendar</field>
        <field name="model">lunch.week</field>
        <field name="arch" type="xml">
            <calendar string="Lunch" date_start="date_start" date_end="date_end">
                <field name="name"/>
            </calendar>
        </field>
    </record> -->
</odoo>

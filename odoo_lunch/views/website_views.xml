<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pages -->
    <template id="lunch_kiosk_layout" name="Lunch Kiosk">
        <div class="oe_structure">
            <div class="container" style="text-align: center; margin-top: 100px;">
                <h1>Please scan to check in</h1>
                <img t-att-src="'data:image/png;base64,%s' % qr_code" alt="QR Code"/>
                <h1>Or enter your quad</h1>
                <input type="text" />
            </div>
        </div>
    </template>

    <template id="lunch_checked_in" name="Lunch Checked In">
        <div class="oe_structure">
            <div class="container" style="text-align: center; margin-top: 100px;">
                <h1>Hello <t t-esc="username"/>! You have checked in for</h1>
                <h1 t-esc="check_in_date"/>
                <h1>Today's meal is ... Allergens ...</h1>
            </div>
        </div>
    </template>
</odoo>
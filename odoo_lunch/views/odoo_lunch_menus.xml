<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_view_week_menu" model="ir.actions.act_window">
            <field name="name">View weekly menu</field>
            <field name="res_model">lunch.week</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Plan weekly menu!
                </p>
            </field>
        </record>

        <record id="action_view_day_menu" model="ir.actions.act_window">
            <field name="name">View Menu</field>
            <field name="res_model">lunch.menu</field>
            <field name="view_mode">calendar,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Plan daily lunch menu!
                </p>
            </field>
        </record>

        <record id="action_lunch_menu_rsvp_pie_chart" model="ir.actions.act_window">
            <field name="name">RSVP Pie Chart</field>
            <field name="res_model">lunch.menu.rsvp.report</field>
            <field name="view_mode">graph</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_empty_folder">
                No data yet!
              </p><p>
                This report allows you to analyze the RSVP data for your lunch menus.
                You can group by various fields such as date, ingredients, and category.
                Use the pivot table to summarize the data and gain insights into your lunch menu planning.
              </p>
            </field>
        </record>
        
        <menuitem
            id="odoo_lunch_menu_main_menu"
            name="Odoo Lunch"
            sequence="10"
            web_icon="odoo_lunch,static/description/icon.png"
            groups="base.group_user"/>

        <menuitem
            id="lunch_menu_menu"
            name="Lunch"
            action="action_view_day_menu"
            parent="odoo_lunch_menu_main_menu"
            sequence="10"/>

        <menuitem
            id="lunch_week_menu"
            name="Weekly Lunch"
            action="action_view_week_menu"
            parent="odoo_lunch_menu_main_menu"
            sequence="11"/>

        <menuitem id="menu_lunch_reports"
                  name="Reporting"
                  groups="base.group_user"
                  parent="odoo_lunch_menu_main_menu"
                  sequence="11"
        >

                <menuitem id="menu_rsvp_breakdown"
                          action="action_lunch_menu_rsvp_pie_chart"
                          groups="base.group_user"
                          name="RSVP Breakdown"
                          sequence="13"
                />
        </menuitem>
    </data>
</odoo>
